{
  "name": "kensho-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "frontend:dev": "cd frontend && npm run dev",
    "backend:dev": "cd backend && npm run server:dev",
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
